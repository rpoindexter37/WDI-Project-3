<div class="col-sm-6 col-sm-offset-3">
    <h1>Add Playlist</h1>
    <form action="/playlists" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea rows="6" class="form-control" name="url"></textarea>
        </div>

        <button type="submit" class="btn btn-info btn-lg">Add Playlist</button>
    </form>

</div>
