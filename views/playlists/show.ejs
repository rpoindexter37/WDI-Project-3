<br>
<br>
<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="row" style="text-align:-webkit-center">
      <h2><%= playlist.name %></h2>
    </div>
    <div class="row">
      <h4>Posted By: <%= playlist._author.local.name || playlist._author.facebook.name%></h4>
    </div>
    <div class="row">
      <%- playlist.url %>

    </div>
    <div class="row">
      <% if (currentUser.local.name == playlist._author.local.name || currentUser.facebook.name == playlist._author.facebook.name) { %>
        <form action="/playlists/<%= playlist._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      <% } %>
    </div>
  </div>
  <br><br><br><br><br><br>
  <div class="col-md-4">
    <div class="row">
      <form class="" action="/playlists/<%= playlist._id %>/comments" method="post">
        <textarea class="form-control" name="body" rows="2" placeholder="Add a comment"></textarea>
        <button type="submit" class="btn btn-primary">Send</button>

      </form>
    </div>
    <br>
    <br>
    <div class="row">
      COMMENTS - <%= playlist.comments.length%>
    </div>
    <div class="row">
      <ul class="list-group">
        <% playlist.comments.forEach((c) =>  { %>
          <li class="list-group-item">
          	<%=  c.body %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>


